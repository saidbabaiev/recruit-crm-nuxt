{
  // --- Interface and Fonts ---
  "workbench.iconTheme": "material-icon-theme",
  "editor.wordWrap": "on",
  "editor.stickyScroll.enabled": true,
  "editor.minimap.enabled": false,
  
  // If you have installed fonts (uncomment the one you want):
  // "editor.fontFamily": "monospace,'JetBrains Mono', 'Monaspace Neon', 'Monaspace Argon', Monaco, 'Fira Code'",
  // "editor.fontLigatures": "'calt', 'liga', 'dlig', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08'",

  // --- ESLint & Formatting ---
  // Auto save files on focus change
  "files.autoSave": "onFocusChange",

  // Run ESLint on save
  "eslint.run": "onSave",

  // Disable built-in formatter
  "editor.formatOnSave": false,

  // Enable ESLint as formatter
  "eslint.format.enable": true, 
  "eslint.useFlatConfig": true,

  // fix errors and organize imports on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never" // Disabled to avoid lag
  },

  // --- Vue Specifc ---
  "[vue]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },

  // Checklist for VSCode
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  "cSpell.words": [
    "formkit",
    "ilike",
    "lucide",
    "Nuxt",
    "Pinia",
    "Shadcn",
    "Signup",
    "sonner",
    "Supabase",
    "tanstack"
  ]
}